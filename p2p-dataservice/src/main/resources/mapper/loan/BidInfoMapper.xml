  <select id="selectBidInfoListByIdAndPage" parameterType="map" resultMap="BaseResultMap">
    select b.id, b.loan_id, b.uid, b.bid_money, b.bid_time, b.bid_status, u.phone
    from b_bid_info b
    left join u_user u on b.uid=u.id
